    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap');
        body { background-color: #050505; color: #fff; font-family: 'JetBrains Mono', monospace; }
        
        #display-substrate {
            width: 100%;
            max-width: 480px;
            height: 280px;
            background: #000000; /* Background stays BLACK */
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 2.5rem;
            border: 1px solid #111;
            position: relative;
            overflow: hidden;
            user-select: none;
        }
        
        .glow-border {
            border: 1px solid #1f2937;
            transition: all 0.3s ease;
        }
        
        .active-glow {
            border-color: #3b82f6;
            box-shadow: 0 0 40px rgba(59, 130, 246, 0.15);
        }

        #content-signal {
            position: relative;
            z-index: 30;
            color: #fff; /* Default static */
            filter: blur(0.2px); /* Slight blur to reduce flicker perception */
            text-shadow: 0 0 5px rgba(255,255,255,0.3);
        }
    </style>
